@model Web.Models.AccountDtoModels.LoginModelDto
@{
    ViewData["Title"] = "Вход";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Вход</h5>
                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, "Логин", new { @class = "control-label" })
                            <input asp-for="Name" class="form-control" type="text" id="inputUsername"
                                placeholder="Введите логин" required />
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, "Пароль", new { @class = "control-label" })
                            @Html.PasswordFor(m => m.Password, new
                                {
                                    id = "inputPassword",
                                    @class = "form-control",
                                    required = true,
                                    placeholder = "Введите пароль"
                                })
                        </div>
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <button class="btn w-100 mt-2 btn-outline-primary btn-block text-uppercase "
                            type="submit">Войти</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
