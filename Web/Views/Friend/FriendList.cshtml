@model Web.Application.CQRS.Queries.Users.GetUserFriendList.UserFriendListVm
@using Web.Extensions;

@{
    ViewData["Title"] = "Список друзей";
}
<div class="row mt-4">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-body">
                <!-- Заголовок и поиск -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0"><i class="fas fa-users me-2"></i>Список друзей</h2>
                    <div class="w-50">
                        <input type="text" class="form-control" id="searchFriends" placeholder="Поиск друзей...">
                    </div>
                </div>

                <!-- Список друзей -->
                <div class="friends-list">
                    <!-- Друзья будут загружены сюда -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/friend/removeFriend.js"></script>
    <script src="~/js/friend/getFriendList.js"></script>
    <script> 

        $(document).ready(function () {
            getFriendList('@(User.Identity.GetUserTag())');
        });
    </script>
}