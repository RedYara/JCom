@{
    ViewData["Title"] = "Список друзей";
}
<div class="row mt-4">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-body">
                <!-- Заголовок и поиск -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0"><i class="fas fa-users me-2"></i>Список друзей</h2>
                    <div class="w-50">
                        <input type="text" class="form-control" id="searchFriends" placeholder="Поиск друзей...">
                    </div>
                </div>

                <!-- Список друзей -->
                <div class="friends-list">
                    <div class="friend-card card mb-3">
                        <div class="card-body d-flex align-items-center">
                            <img src="https://via.placeholder.com/50" class="rounded-circle me-3" alt="Друг">
                            <div class="flex-grow-1">
                                <h5 class="mb-0">Мария Петрова</h5>
                                <small class="text-muted">Онлайн</small>
                            </div>
                            <button class="btn btn-outline-danger btn-sm" onclick="removeFriend(1)">
                                <i class="fas fa-user-minus"></i> Удалить
                            </button>
                        </div>
                    </div>

                    <div class="friend-card card mb-3">
                        <div class="card-body d-flex align-items-center">
                            <img src="https://via.placeholder.com/50" class="rounded-circle me-3" alt="Друг">
                            <div class="flex-grow-1">
                                <h5 class="mb-0">Алексей Смирнов</h5>
                                <small class="text-muted">Был(а) 5 минут назад</small>
                            </div>
                            <button class="btn btn-outline-danger btn-sm" onclick="removeFriend(2)">
                                <i class="fas fa-user-minus"></i> Удалить
                            </button>
                        </div>
                    </div>

                    <div class="friend-card card mb-3">
                        <div class="card-body d-flex align-items-center">
                            <img src="https://via.placeholder.com/50" class="rounded-circle me-3" alt="Друг">
                            <div class="flex-grow-1">
                                <h5 class="mb-0">Ольга Иванова</h5>
                                <small class="text-muted">Был(а) 2 часа назад</small>
                            </div>
                            <button class="btn btn-outline-danger btn-sm" onclick="removeFriend(3)">
                                <i class="fas fa-user-minus"></i> Удалить
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>